<keymap version="1" name="My standard keymap" parent="$default">
  <action id="FileChooser.NewFolder">
    <keyboard-shortcut first-keystroke="alt insert" />
    <keyboard-shortcut first-keystroke="ctrl n" />
    <keyboard-shortcut first-keystroke="shift alt add" />
  </action>
  <action id="Javascript.Linters.EsLint.Fix">
    <keyboard-shortcut first-keystroke="ctrl alt l" />
  </action>
  <action id="NewFile">
    <keyboard-shortcut first-keystroke="alt add" />
  </action>
  <action id="ReformatCode">
    <keyboard-shortcut first-keystroke="shift ctrl alt f" />
  </action>
  <action id="Vcs.ReformatCommitMessage" />
</keymap>