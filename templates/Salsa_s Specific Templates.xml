<templateSet group="Salsa's Specific Templates">
  <template name="msg" value="{{'$KEY$' | localeText: '$LOCALE_TEXT$'}}" description="HTML localization message" toReformat="false" toShortenFQNames="true">
    <variable name="KEY" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="LOCALE_TEXT" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
    </context>
  </template>
  <template name="msg-js" value="$filter('localeText')('$KEY$', '$LOCALE_TEXT$')" description="JS localization message" toReformat="false" toShortenFQNames="true">
    <variable name="KEY" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="LOCALE_TEXT" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_SCRIPT" value="true" />
    </context>
  </template>
  <template name="log" value="//TODO debug. remove before review&#10;$debug.log($OBJECT$,$DESCRIPTION$);" description="Debug function with TODO comment" toReformat="true" toShortenFQNames="true">
    <variable name="OBJECT" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="DESCRIPTION" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JS_STATEMENT" value="true" />
    </context>
  </template>
</templateSet>